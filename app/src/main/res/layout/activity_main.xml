<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_container"
        app:layout_constraintVertical_chainStyle="packed"
        android:orientation="horizontal"
        android:background="@drawable/main_bg">

        <TextView
            android:id="@+id/main_item_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_item_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textSize="20sp"
            tools:text=""/>

        <!-- FIXME 아이템에 따라 동적으로 생성시키는 것도 괜찮을 듯? -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_item_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/main_item_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="5"
            android:paddingTop="30dp">
            <TextView
                android:id="@+id/main_item_dog"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/main_item_baby"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:textSize="15sp"
                android:textColor="@color/c_001C66"
                tools:text="🙇‍️/급식동생/3/3dk/s"/>
            <TextView
                android:id="@+id/main_item_baby"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/main_item_dog"
                app:layout_constraintBottom_toTopOf="@+id/main_item_kids"
                app:layout_constraintEnd_toEndOf="@+id/main_item_dog"
                android:textSize="15sp"
                android:textColor="@color/c_001C66"
                tools:text="🙇‍️/급식동생/3/3dk/s"/>
            <TextView
                android:id="@+id/main_item_kids"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/main_item_baby"
                app:layout_constraintEnd_toEndOf="@+id/main_item_baby"
                android:textSize="15sp"
                android:textColor="@color/c_001C66"
                tools:text="🙇‍️/급식동생/3/3dk/s"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_menu_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_content_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/c_ffffff"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/main_soup_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ricecake_sample"/>
        <TextView
            android:id="@+id/main_soup_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/main_soup_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:text="0"
            />
        <TextView
            android:id="@+id/main_soup_making"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/main_soup_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>